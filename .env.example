# ==============================================================================
# VITE CONFIGURATION
# ==============================================================================

# Base path for the application (default: /)
VITE_BASE_PATH=/

# Development server port (default: 5000)
VITE_PORT=5000

# Automatically open browser when starting dev server (true/false)
VITE_SERVER_OPEN=true

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:3000/
